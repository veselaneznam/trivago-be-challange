{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}
    <h3>{{ title }}</h3>
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="form-group">
        {{ form_label(form.name, 'Name', {'label_attr': {'class': 'control-label col-xs-2'}}) }}
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.alternative_name, 'Alternative Name', {'label_attr': {'class': 'control-label col-xs-2'}}) }}
        {{ form_widget(form.alternative_name, {'attr': {'class': 'form-control'}}) }}
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
    <button type="reset" class="btn btn-default back_criteria">Back</button>

    {{ form_end(form) }}
{% endblock %}
